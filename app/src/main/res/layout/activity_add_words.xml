<!-- res/layout/activity_add_words.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@mipmap/jym2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddWords">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="32dp"
        android:text="添加生词"
        />

    <EditText
        android:id="@+id/add_et_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bar"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:hint="单词" />

    <EditText
        android:id="@+id/add_et_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_et_word"
        android:background="@mipmap/bar"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:hint="翻译" />

    <EditText
        android:id="@+id/add_et_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_et_trans"
        android:background="@mipmap/bar"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:hint="简介" />

    <Button
        android:id="@+id/add_btn_save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/add_et_summary"
        android:layout_marginTop="50dp"
        android:backgroundTint="#BCF3B7E6"
        android:text="保存"
        android:textStyle="bold"
        android:textColor="#474747"
        android:textSize="20dp"/>


</LinearLayout>
