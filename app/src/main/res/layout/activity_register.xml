<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".RegisterActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="账号注册"
        android:textSize="50dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/title_dragon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/titledragon" />

    <EditText
        android:id="@+id/etRegisterUsername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:padding="10dp"
        android:background="@mipmap/bar"
        android:hint="Username" />

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/bar"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@id/etRegisterUsername"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/barbg"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@id/etRegisterPassword"
        android:layout_marginTop="16dp"
        android:text="Register" />

</LinearLayout>
