<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/jym2"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <!-- 上面两个图标 -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/block_1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@mipmap/mainblock1"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/block_2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@mipmap/mainblock2"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- 下面两个图标 -->
    <LinearLayout
        android:id="@+id/bottomRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/topRow"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/block_3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@mipmap/mainblock3"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/block_4"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/mainblock4"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- 具体内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/bottomRow"
        android:layout_centerInParent="true"
        android:gravity="center">

        <!-- 第一个单元行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/musiclearn"
            android:orientation="horizontal"
            android:background="@mipmap/barbg"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="听音乐 学英语"
                android:textStyle="bold"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/musicicon"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- 第二个单元行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/movielearn"
            android:orientation="horizontal"
            android:background="@mipmap/barbg"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="看电影 学英语"
                android:textStyle="bold"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/cinemaicon"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
